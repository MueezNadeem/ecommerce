<% if @products.blank? %>
<p>There are not any products currently in the system.</p>
<% else %>
<p>These are the current products in our system</p>

<ul id = "books">
   <% @products.each do |c| %>

   <li>
   <%= link_to c.productName, {:action => "show", :id => c.id} -%>
   <b> <%= link_to 'Edit', {:action => "edit",
   :id => c.id} %></b>
   <b> <%= link_to "Delete", {:action => 'delete', :id => c.id},
      :confirm => "Are you sure you want to delete this item?" %></b>
   </li>

   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new Product", {:action => 'new' }%></p>
